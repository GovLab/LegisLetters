{
  "settings": {
    "analysis": {
      "analyzer": {
        "letters_text6": {
          "tokenizer": "standard",
          "filter": ["letters_lowercase2", "letters_stopwords", "letters_text_shingle"]
        }
      },
      "filter": {
        "letters_lowercase2": {
          "type": "lowercase"
        },
        "letters_common_grams": {
          "type": "common_grams",
          "ignore_case": true,
          "common_words": "_english_",
          "query_mode": true
        },
        "letters_stopwords": {
          "type": "stop"
        },
        "letters_text_shingle": {
          "type": "shingle",
          "output_unigrams": false,
          "min_shingle_size": 2,
          "max_shingle_size": 5
        }
      }
    }
  }
}
